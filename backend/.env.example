# ============================================
# AWS Deployment Environment Variables
# Copy this file to .env and fill in values
# ============================================

# --- Required ---
PORT=5000
JWT_SECRET=your_jwt_secret_here

# --- Database (Amazon DocumentDB) ---
# Format: mongodb://<username>:<password>@<cluster-endpoint>:27017/<dbname>?tls=true&replicaSet=rs0&readPreference=secondaryPreferred&retryWrites=false
MONGO_URI=mongodb://docdbadmin:yourpassword@your-docdb-cluster.cluster-xxxx.us-east-1.docdb.amazonaws.com:27017/hostel_management?tls=true&replicaSet=rs0&readPreference=secondaryPreferred&retryWrites=false
DOCUMENTDB_TLS=true
# Path to AWS RDS/DocumentDB CA bundle (downloaded automatically during setup)
DOCUMENTDB_CA_PATH=./global-bundle.pem

# --- Frontend URL (S3 + CloudFront) ---
FRONTEND_URL=https://your-cloudfront-distribution.cloudfront.net,http://your-s3-bucket.s3-website-us-east-1.amazonaws.com

# --- Optional: Twilio SMS ---
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# --- Optional: Google Gemini AI ---
GEMINI_API_KEY=

# --- Node environment ---
NODE_ENV=production
